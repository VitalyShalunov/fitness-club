@model IEnumerable<FitnessClub.Models.Client>
@{
    ViewBag.Title = "Client";
}

<h2>Клиенты</h2>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Фамилия: </label>
        <input name="search" class="form-control" />

        @*<label class="control-label">Компания: </label>
        <select name="company" asp-items="Model.Companies" class="form-control"></select>*@

        <input type="submit" value="Поиск" class="btn btn-default" />
    </div>
</form>


<div class="container">
    <table class="table table-hover">
        <tr>
            <td>
                <h5><b>Имя</b></h5>
            </td>
            <td>
                <h5><b>@Html.ActionLink("Фамилия", "Client", new { sort = ViewBag.NameSortParm })</b></h5>
            </td>
            <td>
                <h5><b>Пол</b></h5>
            </td>
            <td>
                <h5><b> @Html.ActionLink("Дата рождения", "Client", new { sort = ViewBag.DateSortParm })</b></h5>
            </td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>

                    <li> @Html.DisplayFor(modelItem => item.name)</li>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.birthday.Year)
                    @Html.DisplayFor(modelItem => item.birthday.Month)
                    @Html.DisplayFor(modelItem => item.birthday.Day)
                </td>

            <td>
                <a href="/Admin/EditClient/@item.idClient" class="col-sm-offset-0">
                    <img src="@Url.Content("~/Content/edit1.png") " width="30px" alt="image">
                </a>
                <a href="/Admin/ShowClient/@item.idClient" class="col-sm-offset-0">
                    <img src="@Url.Content("~/Content/detail1.png") " width="30px" alt="image">
                </a>
            </td>
            </tr>
            @*<td class="col-sm-offset-0">@Html.ActionLink("Редактировать", "EditClient", new { id = item.idClient })</td>*@

        }
    </table>
</div>

    <p>
        <a href="/Admin/CreateClient" class="col-sm-offset-0">
            <img src="@Url.Content("~/Content/add1.png") " width="50px" alt="image">
        </a>
    </p>
